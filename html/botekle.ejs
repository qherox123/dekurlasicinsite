<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
     <script>
var simplemde = new SimpleMDE({ element: document.getElementById("uzun-aciklama") }); 
     </script>
     <textarea name="uzun-aciklama" id="uzun-aciklama"placeholder="" maxlength="300" minlength="50" required="required"></textarea>
